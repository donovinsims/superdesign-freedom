{
    "manifest_version": 3,
    "name": "SuperDesign Freedom",
    "version": "1.0.0",
    "description": "Clone websites and components for SuperDesign Freedom Edition",
    "permissions": [
        "activeTab",
        "storage",
        "clipboardWrite",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    }
}